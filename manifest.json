{
  "manifest_version": 3,
  "name": "Table Exporter",
  "short_name": "Table Exporter",
  "version": "1.0.0",
  "description": "Grab any web table and export to CSV, Excel, JSON, TSV, or Markdown.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Export tables",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "permissions": ["activeTab", "scripting", "downloads", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
